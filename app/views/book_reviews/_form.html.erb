<%= simple_form_for book_review, :url => book_reviews_path(book_review.book), :remote => true do |f| %>
  <%= f.error_notification :message => book_review.errors.inspect %>

  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit Review" %>
  </div>
<% end %>